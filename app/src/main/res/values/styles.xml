<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="OtpEditTextStyle">
        <item name="android:layout_width">50dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:gravity">center</item>
        <item name="android:inputType">number</item>
        <item name="android:maxLength">1</item>
        <item name="android:textSize">20sp</item>
        <item name="android:background">@drawable/bg_otp_input</item>
    </style>

    <style name="rounded_full">
        <item name="cornerSize">50%</item>
    </style>

    <style name="ItemMenuActive" parent="TextAppearance.AppCompat.Medium">
        <item name="android:fontFamily">@font/be_vietnam_pro_medium</item>
        <item name="android:textSize">@dimen/_9ssp</item>
    </style>

    <style name="ItemMenuInActive">
        <item name="android:textSize">@dimen/_8ssp</item>
    </style>

    <style name="TextInputEditTextStyleColor" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:textColorHint">@color/black</item>
        <item name="android:textCursorDrawable">@drawable/custom_caret</item>
        <item name="boxStrokeColor">@color/sea_green</item>
        <item name="boxStrokeErrorColor">@color/red</item>
        <item name="cursorColor">@color/sea_green</item>
        <item name="cursorErrorColor">@color/red</item>
        <item name="errorTextColor">@color/red</item>
        <item name="hintTextColor">@color/sea_green</item>
    </style>

    <style name="AuthTitleStyle">
        <item name="android:textSize">@dimen/_15sdp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="DescriptionStyle">
        <item name="android:textSize">@dimen/_12sdp</item>
    </style>

    <style name="TooltipTextAppearance">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/_9ssp</item>
        <item name="android:gravity">center</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TooltipDefaultStyle">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="TabTextFixed" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="textAllCaps">false</item>
        <item name="android:fontFamily">@font/be_vietnam_pro_medium</item>
    </style>

    <style name="PopupAnimation">
        <item name="android:windowEnterAnimation">@anim/popup_enter</item>
        <item name="android:windowExitAnimation">@anim/popup_exit</item>
    </style>

    <style name="SplashscreenTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@drawable/bg_splashscreen</item>
    </style>

    <style name="Theme.AddTransaction.TransparentSlideUp" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>

</resources>