<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.MoneyLover" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/sea_green</item>
        <item name="android:statusBarColor">@color/white</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="colorAccent">@color/sea_green</item>
        <item name="actionBarTheme">@color/blue</item>
        <item name="android:fontFamily">@font/app_font</item>
        <item name="android:windowBackground">@color/white</item>
        <item name="android:navigationBarColor">@color/white</item>
    </style>

    <style name="Theme.MoneyLover.Splash" parent="Theme.SplashScreen">
        <item name="android:statusBarColor">@color/white</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="actionBarTheme">@color/black</item>
        <item name="windowSplashScreenBackground">@color/white</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/logo_200x200</item>
        <item name="postSplashScreenTheme">@style/Theme.MoneyLover</item>
        <item name="android:windowExitTransition">@null</item>
    </style>

</resources>